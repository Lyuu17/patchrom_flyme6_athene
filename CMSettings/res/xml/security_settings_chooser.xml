<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/security_settings_title"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/lock_settings_title" android:key="security_category">
        <PreferenceScreen android:persistent="false" android:title="@string/unlock_set_unlock_launch_picker_title" android:key="unlock_set_or_change" android:summary="@string/unlock_set_unlock_mode_none" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/title_general" android:key="general_category">
        <com.cyanogenmod.settings.SingleLineSummaryPreference android:title="@string/owner_info_settings_title" android:key="owner_info_settings" android:summary="@string/owner_info_settings_summary" />
        <PreferenceScreen android:title="@string/lockscreen_targets_message" android:key="lockscreen_shortcuts_settings">
            <intent android:targetPackage="com.android.systemui" android:targetClass="com.android.systemui.cm.LockscreenShortcutsActivity" />
        </PreferenceScreen>
        <com.cyanogenmod.settings.cyanogenmod.CMSecureSettingSwitchPreference android:title="@string/lockscreen_visualizer_title" android:key="lockscreen_visualizer" android:defaultValue="true" />
        <com.cyanogenmod.settings.cyanogenmod.CMSecureSettingSwitchPreference android:title="@string/lockscreen_blur_enabled_title" android:key="lock_screen_blur_enabled" android:defaultValue="true" />
        <com.cyanogenmod.settings.cyanogenmod.CMSecureSettingSwitchPreference android:title="@string/lockscreen_weather_enabled_title" android:key="lock_screen_weather_enabled" android:defaultValue="false" />
        <PreferenceScreen android:title="@string/lockscreen_wallpaper_title" android:key="lockscreen_wallpaper">
            <intent android:action="android.intent.action.SET_KEYGUARD_WALLPAPER" />
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>